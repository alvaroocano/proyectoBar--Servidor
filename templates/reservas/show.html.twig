{% extends 'base.html.twig' %}

{% block title %}Reservas{% endblock %}

{% block body %}
    <h1>Reservas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reserva.id }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ reserva.fecha ? reserva.fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ reserva.hora }}</td>
            </tr>
            <tr>
                <th>Nro_personas</th>
                <td>{{ reserva.nroPersonas }}</td>
            </tr>
            <tr>
                <th>Primero</th>
                <td>{{ reserva.primero }}</td>
            </tr>
            <tr>
                <th>Segundo</th>
                <td>{{ reserva.segundo }}</td>
            </tr>
            <tr>
                <th>Bebida</th>
                <td>{{ reserva.bebida }}</td>
            </tr>
            <tr>
                <th>Postre</th>
                <td>{{ reserva.postre }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ reserva.total }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservas_index') }}">back to list</a>

    <a href="{{ path('app_reservas_edit', {'id': reserva.id}) }}">edit</a>

    {{ include('reservas/_delete_form.html.twig') }}
